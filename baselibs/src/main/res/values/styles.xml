<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="base_dialog_style" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--dialog形式的activity style-->
    <style name="base_activity_dialog_style" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item><!--除去背景色-->
    </style>

    <!--dialog形式的activity  从底部滑出-->
    <style name="fade_bottom_activity_dialog_style" parent="base_activity_dialog_style">
        <item name="android:windowAnimationStyle">@style/anim_fade_in_from_bottom</item>
    </style>

    <style name="anim_fade_in_from_bottom" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in_from_bottom</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out_from_bottom</item>
    </style>

    <!--黑线(横)-->
    <style name="common_horizontal_black">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#cdcdcd</item>
    </style>

    <!--黑线(竖)-->
    <style name="common_vertical_black">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#cdcdcd</item>
    </style>

</resources>
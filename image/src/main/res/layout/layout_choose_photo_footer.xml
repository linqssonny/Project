<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_choose_photo_footer_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#50000000"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/tv_choose_photo_folder"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:background="@drawable/image_tv_folder_name_bg"
        android:gravity="center"
        android:textColor="@color/image_tv_folder_name_bg"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_choose_photo_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/image_choose_photo_preview"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.sonnyjack.library.widget.RoundProgressView
            android:id="@+id/rpv_widget_progress"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@color/black"
            android:padding="5dp"
            app:background_color="@android:color/holo_blue_dark"
            app:border_color="@color/red"
            app:border_width="3"
            app:image_resource="@mipmap/ic_launcher"
            app:mode="update"
            app:text="跳转"
            app:text_size="10dp" />

        <TextView
            android:id="@+id/tv_widget_progress"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>